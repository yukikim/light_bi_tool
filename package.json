{
  "name": "light_bi_tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "smoke:next": "node scripts/smoke_next.mjs",
    "smoke:next:dw": "node scripts/smoke_next_dash_widgets.mjs",
    "smoke:next:csv": "node scripts/smoke_next_csv.mjs",
    "dev:backend": "npm --prefix backend run start:dev",
    "build:backend": "npm --prefix backend run build",
    "dev:db": "docker compose up -d db",
    "db:migrate": "cat backend/sql/migrate.sql | docker exec -i -e PGPASSWORD=lightbi lightbi_db psql -U lightbi -d lightbi",
    "down:db": "docker compose down",
    "build": "next build",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-grid-layout": "^2.2.2",
    "react-resizable": "^3.1.3",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
